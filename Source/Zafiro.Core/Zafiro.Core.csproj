<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Zafiro.Core</PackageId>
    <PackageVersion>2.0.4</PackageVersion>
    <Authors>SuperJMN</Authors>
    <Description>The Cross-platform Crema for Windows Devs</Description>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Crema all around</PackageReleaseNotes>
    <PackageTags>WPF XAML Cross-Platform Avalonia AvaloniaUI</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Product>Zafiro.Core</Product>
    <Company>José Manuel Nieto (@SuperJMN)</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
    <Version>2.2.52</Version>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ReactiveUI" Version="11.4.17" />
    <PackageReference Include="Serilog" Version="2.9.0" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>